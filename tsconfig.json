{
    "compilerOptions": {
        "module": "CommonJS",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "types": [],
        "allowJs": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@": [
                "../src"
            ],
            "@/*": [
                "../src/*"
            ]
        }
    },
    "include": [
        "src/typescript/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}